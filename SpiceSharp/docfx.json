{
  "metadata": [
    {
      "src": [
        {
          "files": [ "*.csproj" ],
          "src": ".",
          "exclude": [ "**/obj/**", "**/bin/**" ]
        }
      ],
      "force": false,
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "api/*.yml" ],
        "src": "obj"
      },
      {
        "files": [ "*.md", "*.yml", "api/*.md", "articles/*.md", "articles/*.yml" ],
        "exclude": [ "obj/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "api/images/**", "articles/images/**" ],
        "exclude": [ "obj/**" ]
      }
    ],
    "dest": "../docs",
    "maxParallelism": 4,
    "template": [ "statictoc" ]
  }
}